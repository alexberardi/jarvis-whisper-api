# Service URLs are resolved automatically from jarvis-config-service

# ── Server ────────────────────────────────────────────────────
PORT=8012
DOCKER_HOST_ALIAS=host.docker.internal

# ── Database ──────────────────────────────────────────────────
DATABASE_URL=postgresql+psycopg2://devuser:devpassword@host.docker.internal:5432/jarvis_whisper
MIGRATIONS_DATABASE_URL=postgresql+psycopg2://devuser:devpassword@localhost:5432/jarvis_whisper

# ── Whisper ───────────────────────────────────────────────────
WHISPER_MODEL=~/whisper.cpp/models/ggml-base.en.bin
WHISPER_MODEL_NAME=base.en
# Leave blank to auto-detect (checks PATH then ./bin/whisper-cli)
WHISPER_CLI=
WHISPER_ENABLE_CUDA=false

# ── Voice Recognition ────────────────────────────────────────
USE_VOICE_RECOGNITION=true

# ── Auth ──────────────────────────────────────────────────────
JARVIS_APP_ID=jarvis-whisper
# Populated by jarvis-auth service (register app, then paste key here)
JARVIS_APP_KEY=

# ── Logging ───────────────────────────────────────────────────
JARVIS_LOG_CONSOLE_LEVEL=INFO
JARVIS_LOG_REMOTE_LEVEL=DEBUG
