# Server port
PORT=8012

# Whisper configuration
WHISPER_MODEL=~/whisper.cpp/models/ggml-base.en.bin
# WHISPER_CLI=/path/to/whisper-cli  # Optional: auto-detected
# WHISPER_ENABLE_CUDA=true  # Optional: enable CUDA

# Speaker recognition (optional)
USE_VOICE_RECOGNITION=false

# Node authentication (required)
JARVIS_AUTH_BASE_URL=http://localhost:8007
JARVIS_APP_ID=jarvis-whisper
JARVIS_APP_KEY=  # Get from jarvis-auth admin API

# Optional: Cache TTL for node auth validation (seconds)
NODE_AUTH_CACHE_TTL=60
